{
  "name": "rythm",
  "version": "1.1.0",
  "description": "Hybrid training mobile web app with multi-tenant support",
  "scripts": {
    "dev": "./scripts/start.sh",
    "dev:build": "docker-compose build",
    "dev:up": "docker-compose up -d",
    "dev:down": "docker-compose down",
    "dev:restart": "docker-compose restart",
    "dev:restart:api": "docker-compose restart api",
    "dev:restart:mobile": "docker-compose restart mobile",
    "dev:restart:admin": "docker-compose restart admin",
    "dev:logs": "docker-compose logs -f",
    "dev:logs:api": "docker-compose logs -f api",
    "dev:logs:mobile": "docker-compose logs -f mobile",
    "dev:logs:admin": "docker-compose logs -f admin",
    "dev:logs:db": "docker-compose logs -f db",
    "dev:shell:api": "docker-compose exec api sh",
    "dev:shell:mobile": "docker-compose exec mobile sh",
    "dev:shell:admin": "docker-compose exec admin sh",
    "dev:shell:db": "docker-compose exec db psql -U rythm_api -d rythm",
    "dev:status": "docker-compose ps",
    "dev:health": "./scripts/health-check.sh",
    "dev:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "build": "docker-compose -f docker-compose.prod.yml build",
    "start": "docker-compose -f docker-compose.prod.yml up -d",
    "stop": "docker-compose -f docker-compose.prod.yml down",
    "db:migrate": "docker-compose exec api npm run db:migrate --workspace=@rythm/db",
    "db:seed": "docker-compose exec api npm run db:seed --workspace=@rythm/db",
    "populate-test-data": "node scripts/populate-test-data.js",
    "generate-test-data": "./scripts/generate-test-data.sh",
    "generate-training-data": "ts-node --project scripts/tsconfig.json scripts/generate-training-data.ts",
    "verify-test-data": "node scripts/verify-test-data.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "packageManager": "npm@10.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "pg": "^8.11.3"
  }
}
